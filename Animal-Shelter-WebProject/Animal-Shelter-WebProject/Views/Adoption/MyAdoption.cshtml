@using Animal_Shelter_WebProject.Data;
@using Animal_Shelter_WebProject.Models.Dtos;

@model HomeViewModel
@{
    Layout = ViewBag.LayoutName;
    var dil = TempData["dil"];
    int i = 0;
}


@if(dil=="us")
{

    <div>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                    <p class="card-description">
                        <h4 class="card-title">Animals</h4>
                    </p>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Name </th>
                                <th> Gender</th>
                                <th> Age </th>
                                <th> Breed </th>
                                <th> Date of Birth </th>
                                <th> Weight </th>
                                <th> Neutered </th>
                                <th> Explanation </th>
                                <th> Request Status Information </th>
                                <th> Delete Request </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PetList)
                            {
                                <tr>
                                    <td>@item.Name </td>
                                    <td>@item.Gender</td>
                                    <td> @item.AgeOrMonth </td>
                                    <td> @item.Breed </td>
                                    <td> @item.BirthDate.Value.ToString("dd MMMM yyyy") </td>
                                    <td> @item.Weight </td>
                                    <td> @item.Kisirlik </td>
                                    <td> @item.About </td>

                                    @if (Model.SurecTutucu.ElementAt(i) != null)
                                    {
                                        if (@Model.SurecTutucu.ElementAt(i) == SurecDurumlari.TalepOlusturuldu)
                                        {
                                            <td>Awaiting Owner's Approval</td>
                                        }
                                        else
                                        {
                                            <td>@Model.SurecTutucu.ElementAt(i)</td>
                                        }

                                    }
                                    else
                                    {
                                        <td>Belirsiz</td>
                                    }
                                    <td>

                                        <a asp-controller="Adoption" asp-action="Index" asp-route-petUserId="@item.UserId" asp-route-petId="@item.Id">
                                            <button type="submit" class="btn btn-primary">Cansel Request</button>
                                        </a>

                                    </td>
                                </tr>

                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}
else
{

    <div>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Striped Table</h4>
                    <p class="card-description">
                        <h4 class="card-title">Hayvanlar</h4>
                    </p>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Adı </th>
                                <th> Cinsiyeti</th>
                                <th> Yaşı </th>
                                <th> Cinsi </th>
                                <th> Doğum Tarihi </th>
                                <th> Kilo </th>
                                <th> Kısırlık </th>
                                <th> Açıklama </th>
                                <th> Talep Durum Bilgisi </th>
                                <th> Talebi Sil </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PetList)
                            {
                                <tr>
                                    <td>@item.Name </td>
                                    <td>@item.Gender</td>
                                    <td> @item.AgeOrMonth </td>
                                    <td> @item.Breed </td>
                                    <td> @item.BirthDate.Value.ToString("dd MMMM yyyy") </td>
                                    <td> @item.Weight </td>
                                    <td> @item.Kisirlik </td>
                                    <td> @item.About </td>

                                    @if (Model.SurecTutucu.ElementAt(i) != null)
                                    {
                                        if (@Model.SurecTutucu.ElementAt(i) == SurecDurumlari.TalepOlusturuldu)
                                        {
                                            <td>Sahibinin Onayı Bekleniyor</td>
                                        }
                                        else
                                        {
                                            <td>@Model.SurecTutucu.ElementAt(i)</td>
                                        }

                                    }
                                    else
                                    {
                                        <td>Belirsiz</td>
                                    }
                                    <td>

                                        <a asp-controller="Adoption" asp-action="Index" asp-route-petUserId="@item.UserId" asp-route-petId="@item.Id">
                                            <button type="submit" class="btn btn-primary">Talebi İptal Et</button>
                                        </a>

                                    </td>
                                </tr>

                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}


