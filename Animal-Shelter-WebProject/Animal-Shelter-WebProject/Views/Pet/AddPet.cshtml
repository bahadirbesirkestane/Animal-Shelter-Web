@{
    Layout = ViewBag.LayoutName;
    var dil = TempData["dil"];
}


@using Animal_Shelter_WebProject.Data;
@using Animal_Shelter_WebProject.Models.Dtos.Pets;
@model PetAddDto


@if(dil=="us")
{

    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <h4>Animal Addition Page</h4>
                            </div>
                            <form class="pt-3" asp-controller="Pet" asp-action="AddPet"  method="post">
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Name</label>
                                    <input type="text" step="0.01" class="form-control form-control-lg" name="Name">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1" class="control-label">Gender</label>
                                    <select class="form-select" aria-label="Default select example" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                                        <option selected="selected"></option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Age</label>
                                    <input type="number" step="0.01" class="form-control form-control-lg" name="AgeOrMonth">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Breed</label>
                                    <input type="text" step="0.01" class="form-control form-control-lg" name="Breed">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1" class="control-label">Date of Birth</label>
                                    <input asp-for="BirthDate" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Weight</label>
                                    <input type="number" step="0.01" class="form-control form-control-lg" name="Weight">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1" class="control-label">Have you been neutered?</label>
                                    <select class="form-select" aria-label="Default select example" asp-for="Kisirlik" asp-items="Html.GetEnumSelectList<Kisirlik>()">
                                        <option selected="selected"></option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Explanation</label>
                                    <input type="text" step="0.01" class="form-control form-control-lg" rows="4" name="About">
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-lg">Add</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
else
{

    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <h4>Hayvan Ekleme</h4>
                            </div>
                            <form class="pt-3" asp-controller="Pet" asp-action="AddPet" method="post">
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Adı</label>
                                    <input type="text" step="0.01" class="form-control form-control-lg" name="Name">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1" class="control-label">Cinsiyet</label>
                                    <select class="form-select" aria-label="Default select example" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                                        <option selected="selected"></option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Yaşı</label>
                                    <input type="number" step="0.01" class="form-control form-control-lg" name="AgeOrMonth">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Cinsi</label>
                                    <input type="text" step="0.01" class="form-control form-control-lg" name="Breed">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1" class="control-label">Doğum Tarihi</label>
                                    <input asp-for="BirthDate" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Kilo(Kg)</label>
                                    <input type="number" step="0.01" class="form-control form-control-lg" name="Weight">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1" class="control-label">Kısırlaştırma Yapıldı mı</label>
                                    <select class="form-select" aria-label="Default select example" asp-for="Kisirlik" asp-items="Html.GetEnumSelectList<Kisirlik>()">
                                        <option selected="selected"></option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputUsername1">Açıklama</label>
                                    <input type="text" step="0.01" class="form-control form-control-lg" rows="4" name="About">
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-lg">Ekle</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}


